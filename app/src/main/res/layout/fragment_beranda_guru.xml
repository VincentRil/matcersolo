<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".guru.BerandaGuruFragment">

    <!-- Tombol Logout -->
    <ImageView
        android:id="@+id/logoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_logout"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nama Guru -->
    <TextView
        android:id="@+id/namaGuruBeranda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halo Ibu Sali !!"
        android:textSize="25sp"
        android:textColor="@color/text"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Kelas Guru -->
    <TextView
        android:id="@+id/kelasGuruBeranda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelas 4"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/namaGuruBeranda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Menu di Tengah -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/kelasGuruBeranda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:padding="24dp">

            <!-- Baris 1: 2 Menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Menu Daftar Topik -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/daftar_topik"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_daftar_topik"
                            android:scaleType="centerCrop"
                            android:contentDescription="Daftar Topik" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <!-- Menu Bank Soal -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/bank_soal"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_bank_soal"
                            android:scaleType="centerCrop"
                            android:contentDescription="Bank Soal" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>

            <!-- Baris 2: 1 Menu di Tengah -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/pengaturantopik"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_pengaturantopik"
                        android:scaleType="centerCrop"
                        android:contentDescription="Edit Topik dan Soal" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
