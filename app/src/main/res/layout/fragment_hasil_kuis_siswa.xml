<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:paddingTop="32dp">

    <!-- Nama siswa dan kelas -->
    <TextView
        android:id="@+id/text_nama_siswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama siswa"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text_kelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelas 4"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp"
        android:gravity="center"/>

    <!-- Teks Selesai -->
    <TextView
        android:id="@+id/text_selesai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELESAI"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:shadowColor="#888888"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <!-- Card Nilai -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_hasil_kuis"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nilai"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="48dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_nilai_akhir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="__"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawaban benar"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_jawaban_benar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="__"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Tombol kembali -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_kembali_beranda"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Kembali ke Beranda"
        android:textStyle="bold"

        android:textColor="@color/biru"
        android:background="@drawable/regis_selector"
        android:layout_marginTop="8dp"/>
</LinearLayout>
