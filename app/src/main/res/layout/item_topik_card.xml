<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_topik"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/birutopik">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Kolom Kiri -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/nama_topik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deret bilangan"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/edit_soal_ic"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:src="@drawable/ic_edit_topik"
                android:layout_marginStart="10dp"/>


        </LinearLayout>

        <!-- Kolom Kanan -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/hapus_topik_ic"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:src="@drawable/ic_delete"/>

                <TextView
                    android:id="@+id/peserta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hapus"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
