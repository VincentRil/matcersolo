<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_topik"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/birutopik">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Kolom Kiri -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama_topik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deret bilangan"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/durasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durasi: 30 menit"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/total_soal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah soal: 15"
                android:textColor="@color/black"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Kolom Kanan -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah yang menjawab"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginBottom="2dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_people"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/peserta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9/11"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal: 25 Maret 2025"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
